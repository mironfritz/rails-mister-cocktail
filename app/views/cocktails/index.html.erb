<h1>Cocktails</h1>
  <% @cocktails.each do |cocktail| %>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cocktail.img %>)">
    <%= link_to cocktail.name, "/cocktails/#{cocktail.id}"%>
  </div>
  <% end %>
<p><%= link_to "Create", new_cocktail_path %></p>
